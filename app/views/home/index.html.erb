<!-- app/views/home/index.html.erb -->
    <div class="wrapper">
        <div class="title">
            <h1>Der legendäre Blog </h1>
            <p>Die aktuellen Beiträge</p>
        </div>

        <div class="posts" id="post_section">
            <% @posts.each do |post| %>
                <div class="post-card">
                    <img class="image" src="<%= post.media %>">
                    <div class="title">
                        <h2><%= post.title %></h2>
                    </div>
                    <div class="body-trunc">
                        <p><%= post.body %></p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
